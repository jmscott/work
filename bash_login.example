#
#  Synopsis:
#	Typical .bash_login for jmscott interactive bash work environment.
#  Usage:
#	cd $HOME
#	JMSCOTT_ROOT=/usr/local/jmscott
#	cp $JMSCOTT_ROOT/lib/bash_login.example $HOME/.bash_login
#	chmod +w .bash_login 
#
#	#  alternatively, to track changes to bash_login
#
#	ln -s $JMSCOTT_ROOT/lib/bash_login.example $HOME/etc/bash_login
#	echo '. etc/bash_login' >>$HOME/.bash_login
#

export BASH_SILENCE_DEPRECATION_WARNING=1	#  silence macos silliness

PS1="$USER@$(hostname | sed 's/\..*//')> "
unalias -a
set -o vi

export HISTSIZE=10000
export HISTCONTROL=ignoreboth:erasedups

#  source in profile used by cronjobs
test -e etc/profile && . etc/profile

#  monitor mail
if [ -d /var/mail ];  then
	export MAIL=/var/mail/$USER
fi

#  Add mac ports, if not already added by etc/profile
case "$PATH" in
*/opt/local/bin*)
	;;
*)
	test -d /opt/local/bin && PATH=/opt/local/bin:$PATH
	;;
esac

#
#  add jmscott tools
#
#	https://github.com/jmscott/work
#
if [ -d /usr/local/jmscott ];  then
	export JMSCOTT_ROOT=/usr/local/jmscott

	#  add $JMSCOTT_ROOT/bin to PATH
	case "$PATH" in
	*$JMSCOTT_ROOT/bin*)
		;;
	*)
		PATH=$JMSCOTT_ROOT/bin:$PATH
		;;
	esac
fi

#  enable options for tab expansion of directory names

shopt | grep -w direxpand >/dev/null
STATUS="${PIPESTATUS[*]}"
case "$STATUS" in
'0 0')
	shopt -s direxpand
	;;
'0 1')
	;;
*)
	echo "WARN: unknown status: shopt | grep direxpand: $STATUS"
	;;
esac

export BLOBIO_ROOT=${BLOBIO_ROOT:=/usr/local/blobio}
test -x $BLOBIO_ROOT/bin && PATH=$BLOBIO_ROOT/bin:$PATH
